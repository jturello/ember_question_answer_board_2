<div class="debug hidden">new-question.hbs</div>


{{#if displayNewForm}}
<h4>Add a New Question</h4>
<div>
  <form>
    <div class="row">
      <div class="form-group">
        <div class="col-sm-2">
          <label for="author">Author:</label>
        </div>
        <div class="col-sm-10">
          {{input value=author id="author"}}
        </div>
      </div>
    </div>
    <div class="row">
      <div class="form-group">
        <div class="col-sm-2">
          <label for="contents">Question:</label>
        </div>
        <div class="col-sm-10">
          {{input value=contents id="contents"}}
        </div>
      </div>
    </div>
    <div class="row">
      <div class="form-group">
        <div class="col-sm-2">
          <label for="notes">Notes:</label>
        </div>
        <div class="col-sm-10">
          {{input value=notes id="notes"}}
        </div>
      </div>
    </div>
    <button class="margin-bottom-10px" {{action 'save'}}>Save</button>
  </form>
</div>
{{else}}
  <button class="margin-bottom-10px" {{action 'addQuestionFormShow'}}>New Question</button>
{{/if}}
